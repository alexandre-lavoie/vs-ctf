{
    "name": "vs-ctf",
    "version": "0.0.1",
    "publisher": "alexandre-lavoie",
    "displayName": "VS CTF",
    "description": "An extension for CTFs",
    "license": "MIT",
    "extensionKind": [
        "ui",
        "workspace"
    ],
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/alexandre-lavoie/vs-ctf"
    },
    "engines": {
        "vscode": "^1.90.0"
    },
    "main": "out/extension.js",
    "scripts": {
        "build": "rollup --config rollup.config.ts --bundleConfigAsCjs --configPlugin @rollup/plugin-typescript",
        "watch": "rollup --watch --config rollup.config.ts --bundleConfigAsCjs --configPlugin @rollup/plugin-typescript"
    },
    "devDependencies": {
        "@rollup/plugin-typescript": "^12.1.0",
        "@types/node": "^22.7.4",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.0",
        "@types/vscode": "^1.90.0",
        "rollup": "^4.24.0",
        "tslib": "^2.7.0",
        "typescript": "^5.6.2"
    },
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "vs-ctf",
                    "title": "VS CTF",
                    "icon": "resources/icons/flag.svg"
                }
            ]
        },
        "views": {
            "vs-ctf": [
                {
                    "id": "vs-ctf.challenges",
                    "name": "Challenges"
                },
                {
                    "id": "vs-ctf.scoreboard",
                    "name": "Scoreboard"
                }
            ]
        },
        "commands": [
            {
                "command": "vs-ctf.test",
                "category": "VS CTF",
                "title": "Test",
                "icon": "$(zap)"
            },
            {
                "command": "vs-ctf.view-challenge",
                "category": "VS CTF",
                "title": "View Challenge",
                "icon": "$(eye)",
                "enablement": "view == vs-ctf.challenges"
            },
            {
                "command": "vs-ctf.solve-challenge",
                "category": "VS CTF",
                "title": "Solve Challenge",
                "icon": "$(check)",
                "enablement": "view == vs-ctf.challenges"
            }
        ],
        "menus": {
            "view/item/context": [
                {
                    "command": "vs-ctf.solve-challenge",
                    "when": "view == vs-ctf.challenges && viewItem == challenge_todo",
                    "group": "inline"
                },
                {
                    "command": "vs-ctf.view-challenge",
                    "when": "view == vs-ctf.challenges && (viewItem == challenge_todo || viewItem == challenge_done)",
                    "group": "inline"
                }
            ]
        }
    },
    "dependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-markdown": "^6.0.3"
    }
}
