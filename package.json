{
  "name": "vs-ctf",
  "version": "0.0.1",
  "publisher": "alexandre-lavoie",
  "displayName": "VS CTF",
  "description": "An extension for CTFs",
  "license": "MIT",
  "icon": "resources/icons/icon.png",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alexandre-lavoie/vs-ctf"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "main": "out/extension.js",
  "scripts": {
    "build": "rollup --config rollup.config.ts --bundleConfigAsCjs --configPlugin @rollup/plugin-typescript",
    "watch": "rollup --watch --config rollup.config.ts --bundleConfigAsCjs --configPlugin @rollup/plugin-typescript",
    "format": "prettier --config .prettierrc.json --ignore-path .prettierignore --write \"**/*.{ts,tsx,md,json}\"",
    "package": "vsce package --out dist"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.1.1",
    "prettier": "^3.3.3",
    "rollup": "^4.24.0",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2"
  },
  "contributes": {
    "configuration": [
      {
        "title": "VS CTF",
        "properties": {
          "vs-ctf.template": {
            "type": "string",
            "default": null,
            "description": "Path to template folder"
          }
        }
      },
      {
        "title": "CTF",
        "properties": {
          "vs-ctf.ctf.enabled": {
            "type": "boolean",
            "default": false,
            "description": "Is VS CTF enabled in this workspace?"
          },
          "vs-ctf.ctf.type": {
            "type": "string",
            "enum": [
              "ctfd",
              "custom"
            ],
            "default": "custom",
            "description": "The platform that the CTF running on"
          },
          "vs-ctf.ctf.url": {
            "type": "string",
            "default": "",
            "description": "URL of the CTF"
          }
        }
      },
      {
        "title": "CTFd",
        "properties": {
          "vs-ctf.ctfd.token": {
            "type": "string",
            "default": "",
            "description": "Session token or api key of CTFd account"
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vs-ctf",
          "title": "VS CTF",
          "icon": "resources/icons/flag.svg"
        }
      ]
    },
    "views": {
      "vs-ctf": [
        {
          "id": "vs-ctf.getting-started",
          "name": "Getting Started",
          "when": "!config.vs-ctf.ctf.enabled"
        },
        {
          "id": "vs-ctf.challenges",
          "name": "Challenges",
          "when": "config.vs-ctf.ctf.enabled"
        },
        {
          "id": "vs-ctf.scoreboard",
          "name": "Scoreboard",
          "when": "config.vs-ctf.ctf.enabled"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "vs-ctf.getting-started",
        "contents": "This workspace is not configured for VS CTF. If this not the case, let the maintainers know. Otherwise, click the button below to configure the workspace.\n[Configure](command:vs-ctf.configure)"
      }
    ],
    "commands": [
      {
        "command": "vs-ctf.refresh-challenges",
        "category": "CTF",
        "title": "Refresh Challenges",
        "icon": "$(refresh)"
      },
      {
        "command": "vs-ctf.view-challenge",
        "category": "CTF",
        "title": "View Challenge",
        "icon": "$(eye)"
      },
      {
        "command": "vs-ctf.open-challenge",
        "category": "CTF",
        "title": "Open Challenge",
        "icon": "$(files)",
        "enablement": "view == vs-ctf.challenges"
      },
      {
        "command": "vs-ctf.goto-challenge",
        "category": "CTF",
        "title": "Goto Challenge",
        "enablement": "false"
      },
      {
        "command": "vs-ctf.search-challenge",
        "category": "CTF",
        "title": "Search Challenge",
        "icon": "$(search)"
      },
      {
        "command": "vs-ctf.solve-challenge",
        "category": "CTF",
        "title": "Solve Challenge",
        "icon": "resources/icons/flag.svg"
      },
      {
        "command": "vs-ctf.goto-team",
        "category": "CTF",
        "title": "Goto Team",
        "enablement": "false"
      },
      {
        "command": "vs-ctf.goto-me",
        "category": "CTF",
        "title": "Me",
        "icon": "$(account)"
      },
      {
        "command": "vs-ctf.search-team",
        "category": "CTF",
        "title": "Search Team",
        "icon": "$(search)"
      },
      {
        "command": "vs-ctf.refresh-scoreboard",
        "category": "CTF",
        "title": "Refresh Scoreboard",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vs-ctf.refresh-challenges",
          "when": "view == vs-ctf.challenges",
          "group": "navigation"
        },
        {
          "command": "vs-ctf.search-challenge",
          "when": "view == vs-ctf.challenges",
          "group": "navigation"
        },
        {
          "command": "vs-ctf.goto-me",
          "when": "view == vs-ctf.scoreboard",
          "group": "navigation"
        },
        {
          "command": "vs-ctf.search-team",
          "when": "view == vs-ctf.scoreboard",
          "group": "navigation"
        },
        {
          "command": "vs-ctf.refresh-scoreboard",
          "when": "view == vs-ctf.scoreboard",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vs-ctf.open-challenge",
          "when": "view == vs-ctf.challenges && (viewItem == challenge_todo || viewItem == challenge_done)",
          "group": "inline"
        },
        {
          "command": "vs-ctf.solve-challenge",
          "when": "view == vs-ctf.challenges && viewItem == challenge_todo",
          "group": "inline"
        }
      ]
    }
  },
  "dependencies": {
    "marked": "^14.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
